/* pages/uplink/uplink.wxss */
.uplink {
  width: 100%;
  height: 100%;
}

.scroll-top {
  height: 100rpx;
  line-height: 100rpx;
  width: auto;
  background-color: #fff5f5;
}

.top-item {
  display: inline-block;
  width: 65px;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.active {
  font-size: 36rpx;
  color: rgb(216, 27, 27);
}

.swiper {
  padding: 20rpx 30rpx;
  height: 100vh;
}

.swipers-item {
  font-size: 32rpx;
  color: #333;
  line-height: 60rpx;
  text-indent: 70rpx;
}