/* pages/poster1/poster1.wxss */
canvas {
  position: fixed;
  top: 0;
  left: -9999px;
}

.canvas {
  width: 800rpx;
  height: 1340rpx;
  /* background-color: beige; */
}

image {
  width: 800rpx;
  height: 1340rpx;
  display: block;
}

.dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -200rpx;
  margin-left: -200rpx;
  width: 400rpx;
  height: 200rpx;
  background-color: #fff;
  border-radius: 20rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
}

text {
  box-sizing: border-box;
  height: 100rpx;
  line-height: 100rpx;
  display: block;
}

.top {
  border-bottom: 1rpx solid #eee;
}

.bottom {
  display: flex;
  justify-content: space-around;
}

.bottom text {
  width: 50%;
}

.yes {
  border-right: 1rpx solid #eee;
}